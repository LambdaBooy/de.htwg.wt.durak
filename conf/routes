# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                           controllers.DurakController.durak

GET     /about                      controllers.DurakController.about

GET     /addPlayer                  controllers.DurakController.addPlayer(name: String)

GET     /newGame                    controllers.DurakController.newGame

GET     /play/:input                controllers.DurakController.playCard(input: String)

GET     /ok                         controllers.DurakController.ok

GET     /take                       controllers.DurakController.take

GET     /undo                       controllers.DurakController.undo

GET     /exit                       controllers.DurakController.exit

GET     /numberOfPlayers            controllers.DurakController.getNumberOfPlayers

GET     /activePlayer               controllers.DurakController.getActivePlayer

GET     /attacker                   controllers.DurakController.getAttacker

GET     /defender                   controllers.DurakController.getDefender

GET     /neighbor                   controllers.DurakController.getNeighbor

GET     /activePlayerHandCards      controllers.DurakController.getActivePlayerHandCards

GET     /attackerHandCards          controllers.DurakController.getAttackerHandCards

GET     /defenderHandCards          controllers.DurakController.getDefenderHandCards


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
